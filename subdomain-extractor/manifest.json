{
  "manifest_version": 3,
  "name": "Subdomain Extractor",
  "version": "1.0",
  "description": "Automatically extracts subdomains from URLs and file content",

  "permissions": ["webRequest", "storage", "activeTab"],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "View Extracted Subdomains"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
